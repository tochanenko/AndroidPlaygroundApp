<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RoarActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="389dp" app:srcCompat="@mipmap/tiger"
            android:id="@+id/imageTiger" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/click_the_tiger"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textTiger" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageTiger" android:textAlignment="center"
            android:textSize="20sp" android:textColor="@color/darkGray"/>
    <View
            android:layout_width="149dp"
            android:layout_height="82dp"
            android:id="@+id/viewKus" app:layout_constraintStart_toStartOf="@+id/imageTiger"
            app:layout_constraintEnd_toEndOf="@+id/imageTiger" android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageTiger"/>
    <View
            android:layout_width="91dp"
            android:layout_height="74dp"
            android:id="@+id/viewPurrLeft" app:layout_constraintStart_toStartOf="@+id/imageTiger"
            android:layout_marginStart="64dp" android:layout_marginTop="46dp"
            app:layout_constraintTop_toTopOf="@+id/imageTiger"/>
    <View
            android:layout_width="91dp"
            android:layout_height="74dp"
            android:id="@+id/viewPurrRight" app:layout_constraintEnd_toEndOf="@+id/imageTiger"
            android:layout_marginEnd="64dp"
            android:layout_marginTop="46dp" app:layout_constraintTop_toTopOf="@+id/imageTiger"/>
</android.support.constraint.ConstraintLayout>